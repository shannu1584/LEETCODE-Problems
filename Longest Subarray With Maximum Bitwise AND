class Solution(object):
    def longestSubarray(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        max_val = max(nums)
        longest = count = 0
        
        for num in nums:
            if num == max_val:
                count += 1
                longest = max(longest, count)
            else:
                count = 0  # reset if current number is not max_val
        
        return longest
        
